
<h1>Observaciones de Alumnos</h1>



<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Observación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumno_observaciones.each do |alumno_observacion| %>
      <tr>
        <td><%= alumno_observacion.observacion %></td>        
        <td><%= link_to 'Editar', edit_alumno_observacion_path(alumno_observacion), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Eliminar', alumno_observacion, method: :delete, data: { confirm: '¿Está seguro?' }, class: 'btn btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Observación', new_alumno_observacion_path %>
