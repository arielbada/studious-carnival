
<h1>Localidades</h1>

<table>
  <thead>
    <tr>
      <th>Localidad</th>
      <th>Region educativa</th>
      <th>Nodo</th>
	  <th>Departamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @localidades.each do |localidad| %>
      <tr>
        <td><%= localidad.localidad %></td>
        <td><%= localidad.region_educativa %></td>
        <td><%= localidad.nodo %></td>
		<td><%= localidad.departamento %></td>
        <td><%= link_to 'Show', localidad, class: 'btn btn-xs'%></td>
        <td><%= link_to 'Edit', edit_localidad_path(localidad), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Destroy', localidad, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Localidad', new_localidad_path, class: 'btn' %>
