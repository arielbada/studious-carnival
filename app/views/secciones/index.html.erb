
<h1>Secciones</h1>
<h3><small><%= "La búsqueda devolvió #{@secciones.count} registros." if @secciones.count != Seccion.all.count %></small></h1>

<%= form_tag secciones_path, :method => 'get' do %>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Sección</th>
	    <th>Fecha Inicio</th>
	    <th>Fecha Finalización</th>
	    <th>ID Plataforma</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
   <tr>
		<td><%= text_field_tag :seccion, params[:seccion], :class => "form-control" %></td>		
		<td></td>
		<td></td>
		<td><%= text_field_tag :id_plataforma, params[:id_plataforma], :class => "form-control" %></td>
		<td><%= submit_tag("Buscar", :name => nil, :class => "form-control") %></td>
	</tr>
<% end %>

    <% @secciones.each do |seccion| %>
      <tr>
        <td><%= seccion.seccion %></td>
        <td><%= seccion.fecha_inicio %></td>
        <td><%= seccion.fecha_finalizacion %></td>
		<td><%= seccion.id_plataforma %></td>
        <td><%= link_to 'Editar', edit_seccion_path(seccion), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Eliminar', seccion, method: :delete, data: { confirm: '¿Está seguro?'}, class: 'btn btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Sección', new_seccion_path %>
