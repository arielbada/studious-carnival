
<h1>Alumnos</h1>

<table>
  <thead>
    <tr>
      <th>Dni</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Localidad</th>
      <th>Domicilio</th>
      <th>Telefono fijo</th>
      <th>Telefono celular</th>
      <th>Correo</th>
      <th>Fecha nacimiento</th>
      <th>Sede</th>
      <th>Inscripcion certificado</th>
      <th>Inscripcion foto</th>
      <th>Inscripcion partida</th>
      <th>Inscripcion ficha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.dni %></td>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.apellido %></td>
        <td><%= alumno.localidad.localidad %></td>
        <td><%= alumno.domicilio %></td>
        <td><%= alumno.telefono_fijo %></td>
        <td><%= alumno.telefono_celular %></td>
        <td><%= alumno.correo %></td>
        <td><%= alumno.fecha_nacimiento %></td>
        <td><%= alumno.sede.escuela %></td>
        <td ><span class='glyphicon <%= alumno.inscripcion_certificado ? "glyphicon-ok" : "glyphicon-remove"  %>'/></td>
        <td><span class='glyphicon <%= alumno.inscripcion_foto ? "glyphicon-ok" : "glyphicon-remove"  %>'/></td>
        <td><span class='glyphicon <%= alumno.inscripcion_partida ? "glyphicon-ok" : "glyphicon-remove"  %>'/></td>
        <td><span class='glyphicon <%= alumno.inscripcion_ficha ? "glyphicon-ok" : "glyphicon-remove"  %>'/></td>
        <td><%= link_to 'Show', alumno, class: 'btn btn-xs' %></td>
        <td><%= link_to 'Edit', edit_alumno_path(alumno), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Destroy', alumno, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alumno', new_alumno_path, class: 'btn' %>
